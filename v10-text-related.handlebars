<li class="swiper-slide oho-animate fade-in-up">
  <article class="profiles-section--item">
    {{#ifSet element="Photo"}}
      <figure class="aspect-ratio-frame" style="--aspect-ratio: 320/284">
        {{embed layout="v10/text/staff-photo-related"}}
      </figure>
    {{/ifSet}}

    <div class="text-margin-reset funderline">
        {{fulltext linkText="View Profile"}}

      {{#ifSet element="Position Title(s)"}}
        <div class="global-spacing--1x">
          <p>
            {{{publish element="Position Title(s)" modifiers="nl2br"}}}
          </p>
        </div>
      {{/ifSet}}
    </div>
  </article>
</li>

